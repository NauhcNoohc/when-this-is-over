{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": [ "./*" ]
    },
    "types": [
      "@types/node",
      "@types/express",
      "@types/node-fetch",
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [ "./**/*.ts" ]
}
